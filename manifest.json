{
  "name": "WCAG EM Helpers",
  "version": "1.3.0",
  "description": "Supplements the WCAG EM reporting tool.",
  "manifest_version": 2,
  "author": "Dan Smith",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.w3.org/WAI/eval/report-tool/*"],
      "run_at": "document_end",
      "js": [
        "contentScript.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}